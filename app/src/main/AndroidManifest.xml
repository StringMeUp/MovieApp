<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rsam.tmdbapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.rsam.tmdbapp.di.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/tmbd_icon"
        android:label="@string/app_name_label"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BaseApplicationProject">
        <activity android:name="com.rsam.tmdbapp.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>